<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="85dp"
        android:layout_height="62dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtPartida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Partida:" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="106dp"
        android:layout_height="62dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtIdPartida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtJugador1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Jugador 1" />

        <TextView
            android:id="@+id/txtJugador2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Jugador 2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtPuntosJugador1"
            android:layout_width="26dp"
            android:layout_height="25dp"
            android:layout_marginTop="7dp"
            android:text="0" />

        <TextView
            android:id="@+id/txtPuntosJugador2"
            android:layout_width="22dp"
            android:layout_height="24dp"
            android:layout_marginTop="3dp"
            android:text="0" />
    </LinearLayout>

</LinearLayout>
